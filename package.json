{
  "name": "ds-govbr-tailwind",
  "version": "1.2.1",
  "description": "Gov.BR Design System Tailwind CSS theme configuration",
  "main": "theme.js",
  "files": [
    "theme.js",
    "colors.js"
  ],
  "keywords": [
    "tailwindcss",
    "theme",
    "design-system",
    "gov.br",
    "colors"
  ],
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "node-html-parser": "^6.1.13",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "generate-colors": "node ./scripts/generateColors.js",
    "release": "standard-version",
    "publish": "git push --follow-tags origin main && npm publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}